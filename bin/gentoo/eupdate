#!/bin/bash

######################################
#  Runs System Maintenance Commands  #
######################################

# ---------- Functions ----------
function notify() {
    MSG="$1"; shift
    notify-send "$(basename "$0")" "$MSG"
}

# ---------- Main Logic ----------
confirm "epcsync"
confirm "egenerate_mirrors"
confirm "sudo emerge --sync" && notify "Portage Sync is Complete."
confirm "ebvcheck"
confirm "sudo emerge --ask --update --deep --newuse --keep-going @world" && notify "Portage Update is Complete."
confirm "sudo emerge --ask --depclean"
confirm "sudo revdep-rebuild"
confirm "sudo smart-live-rebuild"
confirm "elogv"
confirm "echeck_kernel"

# ---------- Write timestamp to file ----------
DATA_DIR=/home/bryan/.local/share/"$(basename "$0")"
[[ -d $DATA_DIR ]] || mkdir "$DATA_DIR"

TIMESTAMP_FILE=$DATA_DIR/timestamp
date +"%m/%d/%y" > "$TIMESTAMP_FILE"
