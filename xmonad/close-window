#!/bin/bash
WNAME=`xdotool getwindowfocus getwindowname`

if wmctrl -c :ACTIVE:; then
	changeWSifCurrEmpty $WNAME
else
    NUM_OF_WS=$(wmctrl -d | wc -l)
    if [[ $NUM_OF_WS -le 2 ]]; then
        xdotool key alt+s
    else
        COUNT=1
        xdotool key super+r
        while [[ $(wmctrl -d | wc -l) -eq $NUM_OF_WS ]]; do
            if [[ $COUNT -ge 5 ]]; then
                break
            fi
            sleep 0.1
            COUNT=$((COUNT+1))

            xdotool key super+r
        done
    fi
fi
