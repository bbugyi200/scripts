#!/bin/bash

################################
#  Displays Tmux Session Name  #
################################

# ---------- Modules ----------
source gutils.sh

# ---------- Global Variables ----------
# shellcheck disable=SC2034
SCRIPTNAME="$(basename "$0")"

# ---------- Main ----------
if [[ -n "$1" ]]; then
    socket_name="$1"; shift
else
    socket_name="$(tm-socket)"
fi

# shellcheck disable=SC2016
tmux -L "${socket_name}" display-message -p "#S" | sed 's/`/\\`/g'
