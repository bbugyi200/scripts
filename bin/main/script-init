#!/bin/bash

#################################################
#  Initialize Script using Predefined Template  #
#################################################

source /home/bryan/Dropbox/scripts/modules/bash/gutils.sh

# ---------- Command-line Arguments ----------
eval set -- "$(getopt -o "d,D:,f,F:,h,N,T:,x" -l "debug,bin-directory:,filetype:,help,executable:,template-id:,use-extension:" -- "$@")"

USAGE="usage: $(basename "$0") [-d] [-D BIN_SUBDIR] [-f] [-h] [-N | --executable={y|n}] [-x | --use-extension={y|n}] [-T TEMPLATE_ID] -F FILETYPE SCRIPT_NAME"
scriptname="${scriptname}"

read -r -d '' HELP << EOM
$USAGE
EOM

# Default Command-line Arguments
executable="y"
use_extension="n"
template_id=1

while [[ -n "$1" ]]; do
    case $1 in
       -d|--debug )
           PS4='$LINENO: '
           set -x
           ;;
       -h|--help )
           echo "$HELP"
           exit 0
           ;;
       -D|--bin-directory )
           shift
           BIN_SUBDIR="$1"
           ;;
       --executable )
           shift
           executable="$1"
           ;;
       -f )
           force=true
           ;;
       -F|--filetype )
           shift
           FILETYPE="$1"
           ;;
       -N )
           executable="n"
           ;;
       --use-extension )
           shift
           use_extension="$1"
           ;;
       -T|--template-id )
           shift
           template_id="$1"
           ;;
       -x )
           use_extension="y"
           ;;
       -- )
           shift
           break
           ;;
    esac
    shift
done

if [[ -z "$1" ]] || [[ -z "$FILETYPE" ]]; then
    die "$USAGE" 2
fi

# ---------- Global Variables ----------
NEW_SCRIPT_NAME="$1"; shift
BIN="/home/bryan/Dropbox/scripts/bin"

# ---------- Main ----------
if [[ "$(pwd)" == "$BIN/"* && -z "$BIN_SUBDIR" ]] || [[ "$force" = true ]]; then
    FULL_BIN_PATH="$(pwd)"
elif [[ -z "$BIN_SUBDIR" ]]; then
    FULL_BIN_PATH="$BIN"/main
else
    FULL_BIN_PATH="$BIN"/"$BIN_SUBDIR"
fi

if [[ "$(pwd)" != "$FULL_BIN_PATH" ]]; then
    [ -d "$FULL_BIN_PATH" ] || die "The directory $FULL_BIN_PATH does NOT exist." 
    cd "$FULL_BIN_PATH" || exit 1
    imsg "Entering $FULL_BIN_PATH."
fi

case "$FILETYPE" in
    awk )
        EXT="awk"
        ;;
    bash )
        EXT="sh"
        ;;
    latex )
        EXT="tex"
        ;;
    python )
        EXT="py"
        ;;
    * )
        die "FILETYPE must be contained in: [python, bash, awk]"
esac

FULL_TEMPLATE_NAME=/home/bryan/Dropbox/scripts/templates/"${scriptname}"/template."${template_id}"."${EXT}"
if [[ "${use_extension}" == "y" || "${use_extension}" == "yes" ]]; then
    FULL_NEW_SCRIPT_NAME="${NEW_SCRIPT_NAME}.${EXT}"
else
    FULL_NEW_SCRIPT_NAME="${NEW_SCRIPT_NAME}"
fi

start_marker="# START"
start_line="$(ag "${start_marker}" "${FULL_TEMPLATE_NAME}" | awk -F':' '{print $1}')"
if [[ -z "${start_line}" ]]; then
    start_line=3
fi

if ! [[ -f "$FULL_NEW_SCRIPT_NAME" ]]; then
    sudo cp "${FULL_TEMPLATE_NAME}" "${FULL_NEW_SCRIPT_NAME}"
    sed -i "s/${start_marker}//" "${FULL_NEW_SCRIPT_NAME}"
    sudo chown bryan:bryan "${FULL_NEW_SCRIPT_NAME}"
    imsg "Initializing the '$FULL_NEW_SCRIPT_NAME' script."
else
    imsg "The '$FULL_NEW_SCRIPT_NAME' script already exists."
fi

if [[ "${executable}" == "y" || "${executable}" == "yes" ]]; then
    sudo chmod +x "$FULL_NEW_SCRIPT_NAME"
    clinks
fi

imsg "Opening the '$FULL_NEW_SCRIPT_NAME' script in an editor."
vim +"${start_line}" +startinsert "$FULL_NEW_SCRIPT_NAME"
