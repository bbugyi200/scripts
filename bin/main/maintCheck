#!/bin/bash

TITLE="Maintenance Overdue!"

DAYS=$(daysSinceLast --update)
if [[ $DAYS -ge 15 ]]; then
	notify-send -u critical -t 0 "$TITLE" "You should update this machine. The last time you ran 'update' was $DAYS days ago."
fi

DAYS=$(daysSinceLast --cleanup)
if [[ $DAYS -ge 30 ]]; then
	notify-send -u critical -t 0 "$TITLE" "You should cleanup this machine. The last time you ran 'cleanup' was $DAYS days ago."
fi
