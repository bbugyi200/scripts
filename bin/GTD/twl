#!/bin/bash

###################################################################################################
#  Lengthens the Currently Running TimeWarrior Event by N Minutes                                 #
###################################################################################################

# ---------- Modules ----------
source /home/bryan/Dropbox/scripts/modules/bash/gutils.sh

# ---------- Global Variables ----------
scriptname="$(basename "$0")"

# shellcheck disable=SC2034
usage="usage: ${scriptname} [-d] [-h] [-q]"

minutes="$1"; shift

# ---------- Main ----------
if timew &> /dev/null; then
    timew move @1 "$(date '+%H:%M' --date="${minutes} minutes ago")"
fi

xmonad-poll-timew
