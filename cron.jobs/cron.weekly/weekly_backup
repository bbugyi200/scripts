#!/bin/bash

# dropbox backup
DROPBOX=/media/bryan/hercules/backup/dropbox/weekly
[ -d $DROPBOX ] || mkdir -p $DROPBOX
rsync -av --delete /home/bryan/Dropbox/ $DROPBOX
date > $DROPBOX/backup.txt

# etc backup
ETC='/media/bryan/hercules/backup/etc/weekly'
[ -d $ETC ] || mkdir -p $ETC
rsync -av --delete /etc/ $ETC
date > $ETC/backup.txt

# var backup
VAR='/media/bryan/hercules/backup/var/weekly'
[ -d $VAR ] || mkdir -p $VAR
rsync -av --delete /var/ $VAR
date > $VAR/backup.txt

# kernel config backup
cp /usr/src/linux/.config /media/bryan/hercules/backup/kernel-config-"$(uname -r)"
