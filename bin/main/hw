#!/bin/bash

if [[ -z "$COURSE" ]] || [[ -z "$SECTION" ]]; then
    echo "The COURSE and/or SECTION environment variables are not defined!"
    exit 1
fi

if [[ -z "$1" ]]; then
    echo "usage: 'hw <N>'"
    exit 1
fi

N=$1; shift

if [[ ! -d HW$N ]]; then
    mkdir HW$N
fi
if [[ ! -f HW$N/HW$N.tex ]]; then
    cp -i $(find ~/Dropbox -name "HW_Template.tex") HW$N/HW$N.tex
    sed -i "s/HW#/HW$N/g" HW$N/HW$N.tex
    sed -i "s/@@@:@@/$COURSE:$SECTION/g" HW$N/HW$N.tex
fi

tmux send-keys "vim -c'1,/Local Custom/mark c' -c'1,/^\\\\end{enumerate}/mark s' HW$N/HW$N.tex" "Enter"
