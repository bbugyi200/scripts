#!/bin/bash

LocalAlias () {
    FILE="./.localaliases"
    CMD=${1,}

    if [ -a $FILE ]; then
        NEWCMD=$(grep -i "$CMD" "$FILE")
        if [ -n "$NEWCMD" ]; then
            FOUND=1 # CMD already exists in .args
        else
            FOUND=0
        fi
    else
        FOUND=0
    fi

    if [ $FOUND -eq 0 ]; then
        printf "Map the ${CMD^} command to the ${CMD} command? (y/n): "
        read -n 1 CHOICE
        echo

        if [ $CHOICE != "y" ]; then
            exit 1
        fi

        printf "${CMD^} --> ${CMD} "
        read ARGS
        printf "$CMD $ARGS" >> $FILE

        printf "\n" >> $FILE
    else
        eval $NEWCMD
    fi
}
