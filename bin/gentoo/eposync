#!/bin/bash

# ensure running as root
if [ "$(id -u)" != "0" ]; then
  exec sudo "$0" "$@"
fi

if [[ -z "$1" ]]; then
    echo "usage: esync PACKAGE"
    exit 2
fi

pushd "/usr/local/portage" || exit 1
repoman manifest
git add -A && git commit -m "Update $* package(s)" && git push
layman -s bbugyi200
popd || exit 1
