#!/bin/bash

######################################
#  Runs System Maintenance Commands  #
######################################

source /home/bryan/Dropbox/scripts/modules/bash/gutils.sh

# shellcheck disable=SC2034
secret_wrapper="emanage"
source /home/bryan/Dropbox/scripts/modules/bash/secret.sh
source /home/bryan/Dropbox/scripts/modules/bash/emaint.sh

# ---------- Main Logic ----------
econfirm "epcsync"
econfirm "egenerate_mirrors"
econfirm "sudo emerge --sync" && notify "Portage Package Database Sync is Complete."
econfirm "sudo emerge --ask --update --deep --newuse --keep-going @world" && notify "Portage Package Updates are Complete."
econfirm "sudo emerge --ask --depclean"
econfirm "sudo revdep-rebuild"
econfirm "sudo smart-live-rebuild"
econfirm "sudo npm update -g"
econfirm "ebvcheck -v"
econfirm "sudo updatedb"
econfirm "cache_cheaders"
econfirm "elogv"
econfirm "clear && sudo dispatch-conf"
econfirm "echeck_kernel"
