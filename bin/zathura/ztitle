#!/bin/bash

####################################################
#  Get Document Title of Focused Zathura Instance  #
####################################################

if [[ "$(active_window_name)" != "zathura" ]]; then
    exit 1
fi

xprop -id "$(xdotool getwindowfocus)" | grep ^WM_NAME | cut -d' ' -f3- | tr -d '"' | sed 's/\.\(pdf\|epub\|djvu\).*//g'
