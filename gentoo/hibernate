#!/bin/bash

#######################
#  Wrapper for s2ram  #
#######################

# ensure running as root
if [ "$(id -u)" != "0" ]; then
  exec sudo "$0" "$@"
fi

epcsync -q
s2ram

# Restarts Wireless Network Card
sleep 2
rc-service net.wlo1 restart

# Needs to wait for wireless card to start up before DHCP can obtain address
sleep 2
rc-service dhcpcd restart
