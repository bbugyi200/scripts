#!/bin/bash

############################
#  Initialize Bash Script  #
############################

if [[ -z "$1" ]]; then
    echo "usage: $(basename "$0") SCRIPT_NAME"
    exit 2
fi

SCRIPT_NAME="$1"; shift

BIN="/home/bryan/Dropbox/scripts/bin"
if [[ "$(pwd)" != "$BIN/"* ]]; then
    cd "$BIN"/main || exit 1
    echo "Initializing $SCRIPT_NAME bash script into $BIN/main."
    sleep 0.5
fi

read -r -d '' TEMPLATE << EOM
#!/bin/bash


source /home/bryan/Dropbox/scripts/templates/gutils.sh
EOM

printf "$TEMPLATE" > "$SCRIPT_NAME"
chmod +x "$SCRIPT_NAME"
clinks 
vim +2 "$SCRIPT_NAME"
